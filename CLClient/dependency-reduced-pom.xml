<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>Argo</artifactId>
    <groupId>ws.argo</groupId>
    <version>0.4.1</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>CLClient</artifactId>
  <name>Command Line Client</name>
  <description>Argo Command Line client that can operate as a listener as well as a probe generator</description>
  <build>
    <plugins>
      <plugin>
        <groupId>com.google.code.maven-replacer-plugin</groupId>
        <artifactId>replacer</artifactId>
        <version>1.5.3</version>
        <executions>
          <execution>
            <phase>process-resources</phase>
            <goals>
              <goal>replace</goal>
            </goals>
            <configuration>
              <outputDir>${basedir}/target/generated-bin</outputDir>
              <preserveDir>false</preserveDir>
              <filesToInclude>${basedir}/src/resources/client/bin/*</filesToInclude>
              <inputFilePattern>(.*)</inputFilePattern>
              <outputFilePattern>$1</outputFilePattern>
              <replacements>
                <replacement>
                  <token>@JAR_NAME@</token>
                  <value>${project.artifactId}-${project.version}</value>
                </replacement>
              </replacements>
            </configuration>
          </execution>
          <execution>
            <id>process-rpm-config</id>
            <phase>process-resources</phase>
            <goals>
              <goal>replace</goal>
            </goals>
            <configuration>
              <outputDir>${basedir}/target/generated-rpm-config/config</outputDir>
              <preserveDir>false</preserveDir>
              <filesToInclude>${basedir}/src/resources/client/config/*</filesToInclude>
              <inputFilePattern>(.*)</inputFilePattern>
              <outputFilePattern>$1</outputFilePattern>
              <replacements>
                <replacement>
                  <token>@INSTALL_DIR@</token>
                  <value>/opt/argo</value>
                </replacement>
              </replacements>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <manifestEntries>
                    <Main-Class>net.dharwin.common.tools.cli.api.EntryPoint</Main-Class>
                  </manifestEntries>
                </transformer>
                <transformer />
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.5.3</version>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <descriptors>
            <descriptor>src/assembly/assembly.xml</descriptor>
          </descriptors>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>rpm-maven-plugin</artifactId>
        <version>2.1.3</version>
        <executions>
          <execution>
            <id>generate-rpm</id>
            <goals>
              <goal>rpm</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <name>${rpm-package-name}</name>
          <license>MIT (c) 2015, Jeff Simpson</license>
          <group>Applications/Communications</group>
          <needarch>noarch</needarch>
          <targetOS>linux</targetOS>
          <defineStatements>
            <defineStatement>_unpackaged_files_terminate_build 0</defineStatement>
          </defineStatements>
          <mappings>
            <mapping>
              <directory>/opt/argo/client/lib</directory>
              <directoryIncluded>false</directoryIncluded>
              <username>argo</username>
              <groupname>argogroup</groupname>
              <filemode>444</filemode>
              <sources>
                <source>
                  <location>target/</location>
                  <includes>
                    <include>*.jar</include>
                  </includes>
                  <excludes>
                    <exclude>original*.jar</exclude>
                  </excludes>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/opt/argo/client/bin</directory>
              <directoryIncluded>false</directoryIncluded>
              <username>argo</username>
              <groupname>argogroup</groupname>
              <filemode>755</filemode>
              <sources>
                <source>
                  <location>target/generated-bin</location>
                  <includes>
                    <include>*.sh</include>
                  </includes>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/opt/argo/client/bin</directory>
              <directoryIncluded>false</directoryIncluded>
              <username>argo</username>
              <groupname>argogroup</groupname>
              <filemode>664</filemode>
              <sources>
                <source>
                  <location>target/generated-bin</location>
                  <excludes>
                    <exclude>*.sh</exclude>
                    <exclude>*.bat</exclude>
                  </excludes>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/opt/argo/client/config</directory>
              <directoryIncluded>false</directoryIncluded>
              <username>argo</username>
              <groupname>argogroup</groupname>
              <filemode>755</filemode>
              <configuration>true</configuration>
              <sources>
                <source>
                  <location>target/generated-rpm-config/config</location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/usr/local/bin</directory>
              <sources>
                <softlinkSource>
                  <destination>argo</destination>
                  <location>/opt/argo/client/bin/argo.sh</location>
                </softlinkSource>
              </sources>
            </mapping>
          </mappings>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-deploy-plugin</artifactId>
        <version>2.8.2</version>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-install-plugin</artifactId>
        <version>2.5.1</version>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <maven.compiler.source>1.7</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <rpm-package-name>argo-client</rpm-package-name>
    <maven.compiler.target>1.7</maven.compiler.target>
  </properties>
</project>

