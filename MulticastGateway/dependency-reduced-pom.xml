<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>Argo</artifactId>
    <groupId>ws.argo</groupId>
    <version>0.4.0-BETA</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>ws.argo.MCGateway</groupId>
  <artifactId>MulticastGateway</artifactId>
  <name>Multicast Gateway</name>
  <version>0.4.0-BETA</version>
  <description>Provides a sender and receiver for bridging network where multicast would naturally not cross (not multicast routeable - like between segments on the open internet)</description>
  <build>
    <plugins>
      <plugin>
        <groupId>com.google.code.maven-replacer-plugin</groupId>
        <artifactId>replacer</artifactId>
        <version>1.5.3</version>
        <executions>
          <execution>
            <phase>process-resources</phase>
            <goals>
              <goal>replace</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <outputDir>${basedir}/target/generated-bin</outputDir>
          <preserveDir>false</preserveDir>
          <filesToInclude>${basedir}/src/resources/bin/*</filesToInclude>
          <inputFilePattern>(.*)</inputFilePattern>
          <outputFilePattern>$1</outputFilePattern>
          <replacements>
            <replacement>
              <token>@JAR_NAME@</token>
              <value>${project.artifactId}-${project.version}</value>
            </replacement>
          </replacements>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.9.1</version>
        <executions>
          <execution>
            <id>attach-javadocs</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <excludePackageNames>ws.argo.MCGateway.comms</excludePackageNames>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.5.3</version>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <descriptors>
            <descriptor>src/assembly/assembly.xml</descriptor>
          </descriptors>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-deploy-plugin</artifactId>
        <version>2.8.2</version>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-install-plugin</artifactId>
        <version>2.5.1</version>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>rpm-maven-plugin</artifactId>
        <version>2.1.3</version>
        <executions>
          <execution>
            <id>generate-rpm</id>
            <goals>
              <goal>rpm</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <name>${rpm-package-name}</name>
          <license>MIT (c) 2015, Jeff Simpson</license>
          <group>Applications/Communications</group>
          <needarch>noarch</needarch>
          <targetOS>linux</targetOS>
          <defineStatements>
            <defineStatement>_unpackaged_files_terminate_build 0</defineStatement>
          </defineStatements>
          <mappings>
            <mapping>
              <directory>/opt/argo/gateway/lib</directory>
              <directoryIncluded>false</directoryIncluded>
              <username>argo</username>
              <groupname>argogroup</groupname>
              <filemode>444</filemode>
              <sources>
                <source>
                  <location>target/</location>
                  <includes>
                    <include>*.jar</include>
                  </includes>
                  <excludes>
                    <exclude>original*.jar</exclude>
                  </excludes>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/opt/argo/gateway/bin</directory>
              <directoryIncluded>false</directoryIncluded>
              <username>argo</username>
              <groupname>argogroup</groupname>
              <filemode>755</filemode>
              <sources>
                <source>
                  <location>target/generated-bin</location>
                  <includes>
                    <include>*.sh</include>
                  </includes>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/opt/argo/gateway/bin</directory>
              <directoryIncluded>false</directoryIncluded>
              <username>argo</username>
              <groupname>argogroup</groupname>
              <filemode>664</filemode>
              <sources>
                <source>
                  <location>target/generated-bin</location>
                  <excludes>
                    <exclude>*.sh</exclude>
                    <exclude>*.bat</exclude>
                  </excludes>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/usr/local/bin</directory>
              <sources>
                <softlinkSource>
                  <destination>startReceiver</destination>
                  <location>/opt/argo/client/bin/startReceiver.sh</location>
                </softlinkSource>
              </sources>
            </mapping>
            <mapping>
              <directory>/usr/local/bin</directory>
              <sources>
                <softlinkSource>
                  <destination>startSender</destination>
                  <location>/opt/argo/client/bin/startSender.sh</location>
                </softlinkSource>
              </sources>
            </mapping>
          </mappings>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <rpm-package-name>argo-gateway</rpm-package-name>
  </properties>
</project>

